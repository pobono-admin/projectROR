<% provide(:title, 'Sign up') %>
<div class = "col-sm-12 text-center"><h1>註冊</h1></div>
<div class="row" >
	<div class="col-md-6 col-md-offset-3">
		<form name="userForm" ng-submit="submitForm(userForm.$valid)" novalidate>
			<!-- pass in the variable if our form is valid or invalid -->
			<!-- novalidate prevents HTML5 validation since we will be validating ourselves -->
					<%= form_for(@user) do |f| %>

			<label>名字</label>
			<%= f.text_field :name, :class=>'form-control', :placeholder=>"名字", :'ng-model'=>"name", :name => "name", :required => true %>
			<span ng-show="userForm.name.$invalid && !userForm.name.$pristine" class="help-block">告訴我們你的名字吧！</span>
			
			<label>信箱</label>
			<%= f.email_field :email,  :class => 'form-control', :'ng-model'=>"email", :name => "email", :required => true %>
			<div ng-show="userForm.$submitted || userForm.email.$touched" class="help-block">
				<span ng-show="userForm.email.$error.required">告訴我們你的信箱吧！</span>
				<span ng-show="userForm.email.$error.email">Ooops, 信箱格式不對唷！</span>
			</div>

			<label>密碼</label>
			<%= f.password_field :password, class: 'form-control' %>


			<label>密碼卻認</label>
			<%= f.password_field :password_confirmation, class: 'form-control' %>


 			<%= f.submit "建立帳號", class: "btn btn-primary form-control" %>
		<% end %>

		</form>
	</div>
</div>
		<script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.15/angular.min.js"></script>
