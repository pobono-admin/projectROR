<% provide(:title, @user.name) %>
<h1>
  <%= @user.name %>
  <%= @user.email %>
  <div class="col-md-8">
    <% if @user.microposts.any? %>
      <h3>Microposts (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
      <% else %>
      no post
    <% end %>
  </div>
</h1>
